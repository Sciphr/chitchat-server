{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChitChat",
  "version": "0.1.1",
  "identifier": "com.chitchat.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ChitChat",
        "width": 1200,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Sciphr/chitchat/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERENTc3Q0VFMEYzOEQwMUQKUldRZDBEZ1A3bnhYM1lqckxYTXZGei96MHRyZHJIUk5NbjdvajZoZFk4VzRLRzlIWnZ0UDg3UncK"
    }
  }
}
