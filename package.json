{
  "name": "chitchat-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:binary": "npm run build && pkg dist/index.js --targets node20-win-x64,node20-linux-x64 --output bin/chitchat-server --compress GZip"
  },
  "pkg": {
    "assets": [
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "node_modules/better-sqlite3/prebuilds/**/*",
      "admin/**/*"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "latest",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.15.0",
    "pkg": "^5.8.1",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3"
  }
}
