PORT=3001
# Docker mode host mapping (used by docker-compose.yml)
# HOST_PORT=3001
JWT_SECRET=replace-with-long-random-secret
BCRYPT_ROUNDS=12
# TRUST_PROXY=false  # Enable if running behind nginx/Caddy/Cloudflare (can also be set in Admin > Security)
REQUEST_LOGGING=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_MINUTES=10
LOGIN_LOCKOUT_MINUTES=15
REGISTRATION_MIN_PASSWORD_LENGTH=10
# Docker installs: the installer sets this automatically to http://<server-ip>:<port>
# Native installs or manual Docker: set to the URL(s) you access the server from (comma-separated)
# Use * to allow all origins (fine for private/LAN installs, not recommended for public servers)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_NO_ORIGIN=true
DB_PATH=./chitchat.db
DATA_DIR=.
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
# Docker bundled LiveKit defaults:
# LIVEKIT_PORT=7880
# LIVEKIT_UDP_PORT_START=50000
# LIVEKIT_UDP_PORT_END=50100

# Password reset email (required for reset emails)
# These can be set here or configured in Admin > Configuration > Password Reset Email (SMTP)
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Optional SMTP overrides (defaults to Gmail SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Optional reset-token lifetime in minutes (default 30)
# PASSWORD_RESET_TTL_MINUTES=30

# Optional malware scanning for uploads (ClamAV / clamd)
# FILES_AV_ENABLED=false
# FILES_AV_PROVIDER=clamav
# FILES_AV_CLAMAV_HOST=127.0.0.1
# For Docker Compose with --profile clamav, use: FILES_AV_CLAMAV_HOST=clamav
# FILES_AV_CLAMAV_PORT=3310
# FILES_AV_TIMEOUT_MS=15000
# FILES_AV_FAIL_CLOSED=true

# Optional image privacy hardening (JPEG EXIF stripping)
# FILES_STRIP_IMAGE_EXIF=false

# Optional GIF search (GIPHY)
# GIPHY_ENABLED=false
# GIPHY_API_KEY=
# GIPHY_RATING=pg
# GIPHY_MAX_RESULTS=20
